<h2>クーポン登録</h2>
<%= form_with model: @coupon, local: true do |form| %>
  <% if @coupon.errors.any? %>
    <div id="error_explanation">
      <h2><%= @coupon.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @coupon.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
